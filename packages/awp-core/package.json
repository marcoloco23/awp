{
  "name": "@agent-workspace/core",
  "version": "0.8.3",
  "description": "Core types, constants, and schemas for the Agent Workspace Protocol",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "schemas"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoloco23/awp.git",
    "directory": "packages/awp-core"
  },
  "homepage": "https://github.com/marcoloco23/awp#readme",
  "keywords": [
    "awp",
    "agent",
    "workspace",
    "protocol",
    "ai",
    "llm",
    "mcp",
    "a2a",
    "agent-economy",
    "coordination"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "copy-schemas": "cp -r ../../spec/schemas/* ./schemas/",
    "prebuild": "npm run copy-schemas",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}
